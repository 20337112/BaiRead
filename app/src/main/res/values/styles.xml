<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fast_scroll_thumb</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomButton">
        <item name="background">@color/colorTransparent</item>/>
    </style>

    <style name="NormalButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/button_text_style_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <style name="ShapeButton" parent="NormalButton">
        <item name="android:background">@drawable/background_button_shape</item>

    </style>

    <style name="TextWeightButton" parent="NormalButton">
        <item name="android:background">@drawable/background_ripper</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ToolbarButton" parent="TextWeightButton">
        <item name="android:background">@drawable/background_ripper</item>
        <item name="android:height">100dp</item>
    </style>


    <style name="ListDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
