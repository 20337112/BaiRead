<?xml version="1.0" encoding="utf-8"?>
<sunday.app.bairead.View.BookcaseView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    >

    <ImageView
        android:id="@+id/xlist_item_cover_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_book_detail_cover_image"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/xlist_item_cover_image"
        >

        <TextView
            android:id="@+id/xlist_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xlist_item_chapter_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xlist_item_chapter_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




</sunday.app.bairead.View.BookcaseView>