<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:drawableLeft="@drawable/ic_dot"
        android:id="@+id/chapter_list_item_text"
        android:layout_width="@dimen/chapter_list_item_width"
        android:layout_height="@dimen/chapter_list_item_height"
        android:gravity="center_vertical" />

    <TextView
        android:gravity="center"
        android:layout_marginRight="@dimen/chapter_list_item_margin_right"
        android:textColor="@color/colorWhite"
        android:id="@+id/chapter_list_item_cache_text"
        android:layout_width="@dimen/shape_icon_width"
        android:textSize="@dimen/shape_icon_text_size"
        android:layout_height="@dimen/shape_icon_width"
        android:layout_gravity="right|center_vertical"
        android:text="@string/chapter_list_item_cache_text"
        android:background="@drawable/background_icon"
        android:visibility="gone" />

</FrameLayout>