<?xml version="1.0" encoding="utf-8"?>
<sunday.app.bairead.bookRead.BookReadSettingPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_read_setting_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/book_read_setting_panel_top_panel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/book_read_setting_top_panel_cache_book"
            style="@style/NormalButton"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@drawable/ic_download" />

        <ImageView
            android:id="@+id/book_read_setting_panel_mark_add"
            style="@style/NormalButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/book_read_setting_top_panel_cache_book"
            android:scaleType="center"
            android:src="@drawable/ic_book_mark" />

        <ImageView
            android:scaleType="center"
            android:src="@drawable/ic_book_case"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/book_read_setting_top_panel_add_case"
            style="@style/NormalButton"
            android:layout_toLeftOf="@id/book_read_setting_panel_mark_add"
 />


        <!--<Button-->
        <!--android:layout_width="50dp"-->
        <!--android:textSize="@dimen/button_text_style_small_text_size"-->
        <!--style="@style/TextButton"-->
        <!--android:id="@+id/book_read_setting_panel_source"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:text="@string/book_read_setting_top_panel_source_text" />-->


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/book_read_setting_panel_bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/book_read_setting_panel_chapter_menu"
            style="@style/TextWeightButton"
            android:text="@string/book_read_setting_bottom_button_text_chapter" />

        <Button
            android:id="@+id/book_read_setting_panel_book_mark"
            style="@style/TextWeightButton"
            android:text="@string/book_read_setting_bottom_button_text_mark" />

        <Button
            android:id="@+id/book_read_setting_panel_text_font"
            style="@style/TextWeightButton"
            android:text="@string/book_read_setting_bottom_button_text_size" />

        <Button
            android:id="@+id/book_read_setting_panel_more"
            style="@style/TextWeightButton"
            android:text="@string/book_read_setting_bottom_button_text_more" />

    </LinearLayout>

</sunday.app.bairead.bookRead.BookReadSettingPanelView>