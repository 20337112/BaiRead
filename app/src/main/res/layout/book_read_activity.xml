<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/read_bg_0">


    <TextView
        android:id="@+id/book_read_activity_book_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textSize="15dp" />

    <sunday.app.bairead.view.BookTextView
        android:layout_marginTop="25dp"
        android:id="@+id/book_read_activity_book_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18dp" />

    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/book_read_activity_book_page"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/book_read_setting_panel"/>


</FrameLayout>